#song_container
  %h2= @song.title

  #song_info

    .artist= @song.artist
    .song_key
      Key of
      %span= @song.song_key.symbol

    .time_signature
      Time Signature
      %span= @song.time_signature
    

  #song_chords
    - @rendered_sections.each do |section|
      .song_section
        %span.section_title= section[:title]
        - section[:lines].each do |line|
          .line
            .chord_line
              - line[:chords].map { |c| "#{c} ".squeeze(" ") }.each do |chord|
                %span.chord_block= chord
            .lyric_line
              - line[:lyrics].map { |l| "#{l} ".squeeze(" ") }.each do |lyric|
                %span.lyric_block= lyric